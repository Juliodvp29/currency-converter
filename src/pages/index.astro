---
import CurrencyConverter from "../components/CurrencyConverter.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Conversor de Divisas">
	<main
		class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900"
	>
		<div class="container mx-auto px-4 py-12">
			<div class="text-center mb-12">
				<h1 class="text-5xl font-bold text-white mb-4">Conversor de Divisas</h1>
				<p class="text-gray-300 text-lg">
					Conversión en tiempo real con histórico de tasas
				</p>
			</div>
			<CurrencyConverter />
		</div>
	</main>
</Layout>
